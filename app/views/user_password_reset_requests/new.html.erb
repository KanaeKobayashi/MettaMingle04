<!-- app/views/user_password_reset_requests/new.html.erb -->

<h1>パスワードリセットリクエスト</h1>

<%= form_with(model: @user_password_reset_request, url: user_password_reset_requests_path, method: :post) do |f| %>
  <div class="form-group">
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit 'リクエストを送信', class: 'btn btn-primary' %>
  </div>
<% end %>
