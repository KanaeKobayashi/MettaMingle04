<div class="container">
  <h1>Q&Aトップページ</h1>

  <form>
    <input type="text" placeholder="質問を検索...">
    <button type="submit">検索</button>
  </form>

  <a href="/questions/new" class="btn btn-primary">新しい質問</a>

  <ul>
    <% @questions.each do |question| %>
      <li>
        <a href="/questions/<%= question.id %>"><%= question.title %></a>
      </li>
    <% end %>
  </ul>
</div>
